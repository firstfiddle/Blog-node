<%-include('../header.ejs') %>

<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-12">
              <div class="text-center">
                <h2> Blogs Edit</h2>
              </div>
              <form action="/admin/cat/update/<%=d.id %>" method="post">
                <div class="form-floating mb-3">
                  <input type="text" name="cat" placeholder="enter title" class="form-control" value="<%= d.cat_name %>" />
                  <label for="">Category</label>
                </div>
                <div class="form-floating mb-3">
                  <textarea style="overflow: auto;" name="des" placeholder="Discription" class="form-control"
                  ><%= d.des %></textarea>
                  <label for="">Discription</label>
                </div>
                <div class="float-end">
                  <button type="submit" class="btn btn-success">Update Blog</button>
                </div>
              </form>
        </div>
      </div>
    </div>
  </div>
</section>
<%-include('../footer.ejs') %>
