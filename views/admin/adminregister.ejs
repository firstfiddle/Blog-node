        <ul>
          <li>
            <a class="text-decoration-none" href="/admin/dashboard">Dashboard</a>
          </li>
          <li>
            <a class="text-decoration-none " href="/admin/display"
              >Display Blog</a
            >
          </li>
          <li>
            <a class="text-decoration-none" href="/admin/Category">Categories</a>
          </li>
          <li><a class="text-decoration-none active" href="/register">New Admin</a></li>
          <li><a
            data-bs-toggle="modal"
            data-bs-target="#change"
            class="text-decoration-none"
            >Change Password</a
          >
          </li>
          <li>
            <a class="text-decoration-none" href="/admin/contact">Contact</a>
          </li>
          <li><a class="text-decoration-none" href="/logout">Logout</a></li>
        </ul>
      </div>  
</div>
