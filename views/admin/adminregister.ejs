<%-include('../header.ejs') %>
<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
          <div class="dash-header">
            <div class="dash-nav">
              <a
              data-bs-toggle="offcanvas" data-bs-target="#demo"
                class="bg-blue btn btn-danger">Admin</a >
            </div>
            <div class="dash-title">
              <h2>New Admin Register</h2>
            </div>
            <div class="dash-nav">
              
            </div>
          </div>
          <div class="card shadow-lg">
            <div class="row border-5" style="border-radius: 1rem;">
                <div class="col-md-4 text-center mb-3">
                     <img class="w-100 h-100" src="assets/images/yong.jpg" alt="Yong">
                  </div>
                <div class="col-md-7">
                  <div class="text-center">
                     <a href="" data-bs-toggle="offcanvas" data-bs-target="#demo"><img width="75px" src="assets/images/reg.png" alt=""></a><br>
                     <img width="200px" src="assets/images/register.jpg" alt="">
                  </div>
                  <div class="w-100 d-flex justify-content-center">
                      <form  action="/admininsert" class="mb-3 w-75 float-end border border-3 p-3 border-danger" method="post" enctype="multipart/form-data">
                        <% if(message.length > 0){%>
                          <div class="alert alert-danger">
                              <%= message %>  
                          </div>
                      <%} %>
                        <div class="input-group mb-3">
                         <label for="" class="input-group-text text-bg-danger">Name</label>
                         <input name="name" type="text" placeholder="Enter Your Name" class="form-control" required>
                        </div>
                           <div class="input-group mb-3">
                            <label for="" class="input-group-text text-bg-danger">Email</label>
                            <input name="email" type="email" placeholder="Enter Your Email" class="form-control" required>
                           </div>
                           <div class="input-group mb-3">
                            <label for="" class="input-group-text text-bg-danger">Password</label>
                            <input name="password" type="password" placeholder="Enter Your password" class="form-control" required>
                           </div>
                           <div class="input-group mb-3">
                            <label for="" class="input-group-text text-bg-danger">Confirm P</label>
                            <input name="cpassword" type="password" id="Show" placeholder="Conform Password" class="form-control" required>
                           </div>
                           <div class="input-group mb-3">
                            <label for="" class="input-group-text text-bg-danger">Image</label>
                            <input name="image" type="file" placeholder="Insert Image" class="form-control" required>
                           </div>
                           <div class=" form-check">
                           <input type="checkbox" name="" class="form-check-input" onclick="myfunction()">
                           <label for="">Show Password</label>
                           </div>
                           <button type="submit" class="btn btn-success text-light w-100">Register Here</button>         
                        </form>
                  </div>
                </div>
                 
              </div>
         </div>
      </div>
    </div>
  </div>
</section>

 <!-- show password js -->
 <script type="text/JavaScript">
    function myfunction(){
        var show =document.getElementById('Show');
        if(show.type=='password'){
            show.type='text';
        }else{
            show.type='password';
        }
    }
 </script>
